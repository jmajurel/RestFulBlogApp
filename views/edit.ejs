<% include layouts/header %>

<div class="ui text container main">

  <h1>Update Post</h1>

  <form class="ui form" action="/blogs/<%= post._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="post[title]" value="<%= post.title %>" >
    </div>

    <div class="field">
      <label>Image</label>
      <input type="url" name="post[image]" value="<%= post.image %>">
    </div>

    <div class="field">
      <label>Post</label>
      <textarea name="post[body]"><%= post.body %></textarea>
    </div>

    <button class="ui button large purple reversed" type="submit">Update</button>

  </div> 
</div>

<% include layouts/footer %>
