<% include layouts/header %>

<div class="ui container main">
  <h1>Blogs</h1>

  <% blogs.forEach(function(blog) { %>
    <div class="blogPost">
      <h4><%= blog.title %></h4>
      <img src="<%= blog.image %>">
      <span><%= blog.created %></span>
      <p><%= blog.body.substring(0, 20); %></p>
      <a href="/blogs/<%=blog._id%>">Read More</a>
    </div>
  <% }); %>
</div>

<% include layouts/footer %>
